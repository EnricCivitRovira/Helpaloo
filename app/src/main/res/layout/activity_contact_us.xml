<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="health.tueisDeveloper.helpaloo.Activities.ContactUsActivity">

    <Button
        android:id="@+id/termsOfUseButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:text="Nuestros Términos y Condiciones"
        app:layout_constraintBottom_toTopOf="@+id/version"
        app:layout_constraintEnd_toEndOf="@+id/information"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/information" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="109dp"
        android:layout_height="94dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/handslogo" />

    <TextView
        android:id="@+id/information"
        android:layout_width="351dp"
        android:layout_height="329dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Bienvenido a Helpaloo. Helpaloo es una organización sin ánimo de lucro para facilitar el contacto entre personas con problemas de mobilidad reducida que necesitan ayuda y ayudantes que quieran y puedan ayudar a estas. Estos ayudantes pueden obtener un beneficio económico si el necesitado puede permitirselo. Si tienes cualquier problema no dudes en contactar con nosotros envíando un correo electrónico a: contact@helpaloo.com"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/termsOfUseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/version"
        android:layout_width="227dp"
        android:layout_height="25dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/termsOfUseButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/termsOfUseButton" />
</androidx.constraintlayout.widget.ConstraintLayout>